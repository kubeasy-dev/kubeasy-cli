{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies",
    "helpers:pinGitHubActionDigestsToSemver",
    "schedule:daily",
    ":assignAndReview(pbrissaud)",
    ":automergeLinters"
  ],
  "argocd": {
    "managerFilePatterns": ["/pkg/argocd/manifests/.*\\.yaml$/"]
  },
  "packageRules": [
    {
      "description": "Group all GitHub Actions non-major updates (including digests)",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "GitHub Actions non-major dependencies",
      "groupSlug": "github-actions-non-major",
      "automerge": true
    },
    {
      "description": "Group Go modules non-major updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go non-major dependencies",
      "groupSlug": "go-non-major",
      "automerge": true
    },
    {
      "description": "Group npm updates",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "npm dependencies",
      "groupSlug": "npm",
      "automerge": true
    },
    {
      "description": "Don't pin claude-code action",
      "matchPackageNames": [
        "anthropics/claude-code-action"
      ],
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": false
    },
    {
      "description": "Group all embedded ArgoCD manifests updates",
      "matchManagers": [
        "argocd"
      ],
      "groupName": "Embedded ArgoCD manifests",
      "separateMajorMinor": false,
      "separateMinorPatch": false
    }
  ],
  "separateMajorMinor": true
}
