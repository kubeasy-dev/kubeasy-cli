{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies",
    "helpers:pinGitHubActionDigestsToSemver",
    "schedule:daily",
    ":assignAndReview(pbrissaud)",
    ":automergeLinters"
  ],
  "packageRules": [
    {
      "description": "Keep Go version in sync between go.mod and GitHub Actions workflows",
      "matchDatasources": ["golang-version"],
      "matchPackageNames": ["golang"],
      "groupName": "Go version",
      "groupSlug": "go-version",
      "automerge": false
    },
    {
      "description": "Group all GitHub Actions non-major updates (including digests)",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "matchPackageNames": ["!golang"],
      "groupName": "GitHub Actions non-major dependencies",
      "groupSlug": "github-actions-non-major",
      "automerge": true
    },
    {
      "description": "Group Go modules non-major updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Go non-major dependencies",
      "groupSlug": "go-non-major",
      "automerge": true
    },
    {
      "description": "Group npm updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "groupName": "npm dependencies",
      "groupSlug": "npm",
      "automerge": true
    }
  ],
  "separateMajorMinor": true
}
