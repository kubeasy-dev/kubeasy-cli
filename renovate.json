{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies",
    "helpers:pinGitHubActionDigestsToSemver",
    "schedule:daily",
    ":assignAndReview(pbrissaud)",
    ":automergeLinters"
  ],
  "customManagers": [
    {
      "description": "Update Helm chart versions in embedded ArgoCD manifests",
      "customType": "regex",
      "fileMatch": ["^pkg/argocd/manifests/.*\\.yaml$"],
      "matchStrings": [
        "#\\s*renovate:\\s*depName=(?<depName>\\S+)\\s+registryUrl=(?<registryUrl>\\S+)\\n\\s*targetRevision:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "description": "Update GitHub releases versions in embedded ArgoCD manifests",
      "customType": "regex",
      "fileMatch": ["^pkg/argocd/manifests/.*\\.yaml$"],
      "matchStrings": [
        "#\\s*renovate:\\s*depName=(?<depName>\\S+)\\s+datasource=(?<datasource>\\S+)\\n\\s*targetRevision:\\s*(?<currentValue>\\S+)"
      ]
    }
  ],
  "packageRules": [
    {
      "description": "Keep Go version in sync between all files",
      "matchPackageNames": ["golang", "go"],
      "groupName": "Go version",
      "groupSlug": "go-version",
      "automerge": false
    },
    {
      "description": "Group all GitHub Actions non-major updates (including digests)",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "matchPackageNames": ["!golang"],
      "groupName": "GitHub Actions non-major dependencies",
      "groupSlug": "github-actions-non-major",
      "automerge": true
    },
    {
      "description": "Group Go modules non-major updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Go non-major dependencies",
      "groupSlug": "go-non-major",
      "automerge": true
    },
    {
      "description": "Group npm updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "groupName": "npm dependencies",
      "groupSlug": "npm",
      "automerge": true
    },
    {
      "description": "Don't pin claude-code action",
      "matchPackageNames": ["anthropics/claude-code-action"],
      "matchManagers": ["github-actions"],
      "pinDigests": false
    },
    {
      "description": "Group all embedded ArgoCD manifests updates into a single PR",
      "matchManagers": ["custom.regex"],
      "matchFileNames": ["pkg/argocd/manifests/**"],
      "groupName": "Embedded ArgoCD manifests",
      "groupSlug": "argocd-manifests",
      "separateMajorMinor": false,
      "separateMinorPatch": false
    }
  ],
  "separateMajorMinor": true
}
