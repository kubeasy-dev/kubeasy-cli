{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":pinAllExceptPeerDependencies", "helpers:pinGitHubActionDigestsToSemver", "schedule:daily", ":assignAndReview(pbrissaud)", ":automergeLinters"],
  "packageRules": [
    {
      "groupName": "{{manager}} non-major dependencies",
      "groupSlug": "{{manager}}-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "separateMajorMinor": true
}
